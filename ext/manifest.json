{
  "manifest_version": 2,
  "name": "環境を教えてくれるやつ",
  "description": "正規表現にマッチしたページの上部に設定したラベルを表示します",
  "version": "1.0.4",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/content.bundle.js"
      ]
    }
  ],
  "icons": {
    "16": "icon/icon_16.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  },
  "background": {
    "scripts": [
      "js/background.bundle.js"
    ],
    "persistent": false
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
